<Window x:Class="MyMovieList.OMDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMovieList"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="OMDB" Height="675" Width="900" FontSize="16" Background="Black" Foreground="White">
    <Grid x:Name="OMDBPage">
        <Label Content="Movie Title Here" Name="Title_Label" Foreground="White" FontSize="26" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalAlignment="Top"  Width="350" Margin="26,15,0,0"/>
        <TextBlock HorizontalAlignment="Left" Name="info_tb" Margin="32,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" LineStackingStrategy="BlockLineHeight" LineHeight="25" Height="576" Width="545"/>
        <Image x:Name="poster" Margin="582,60,10,234" Source="{Binding Path=poster}"></Image>

    </Grid>
</Window>
